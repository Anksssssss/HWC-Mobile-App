<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_normal"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/colorAccent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="18dp"
            android:padding="@dimen/padding_normal"
            android:text="@string/form_name"
            android:textColor="@android:color/white"
        android:textAppearance="@style/TextAppearance.Material3.TitleMedium" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="18dp"
            android:padding="@dimen/padding_normal"
            android:text="@string/Sync_state"
            android:textColor="@android:color/white"
        android:textAppearance="@style/TextAppearance.Material3.TitleMedium" />

    </LinearLayout>






<LinearLayout
        android:id="@+id/ben_reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_normal"
        app:layout_constraintTop_toBottomOf="@id/ll_header">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="14dp"
            android:padding="@dimen/padding_normal"
            android:text="@string/patient_form"
            android:textColor="@color/default_button"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium" />


        <TextView
            android:id="@+id/pat_s"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="14dp"
            android:padding="@dimen/padding_normal"
            android:text="Syncing"
            android:textColor="@color/default_button"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/nurse_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_normal"
        app:layout_constraintTop_toBottomOf="@id/ben_reg">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="14dp"
            android:padding="@dimen/padding_normal"
            android:text="@string/nurse_form"
            android:textColor="@color/default_button"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium" />


        <TextView
            android:id="@+id/nurse_s"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="14dp"
            android:padding="@dimen/padding_normal"
            android:text="Syncing"
            android:textColor="@color/default_button"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/doctor_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_normal"
        app:layout_constraintTop_toBottomOf="@id/nurse_form">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="14dp"
            android:padding="@dimen/padding_normal"
            android:text="@string/doctor_form"
            android:textColor="@color/default_button"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium" />


        <TextView
            android:id="@+id/doc_s"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="14dp"
            android:padding="@dimen/padding_normal"
            android:text="Syncing"
            android:textColor="@color/default_button"
            android:textAppearance="@style/TextAppearance.Material3.TitleMedium" />
    </LinearLayout>

