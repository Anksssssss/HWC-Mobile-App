                        android:textSize="18sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/rbsEditTxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/rbs_mg_dl"
