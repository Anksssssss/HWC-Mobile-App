                </com.google.android.material.textfield.TextInputLayout>

                <!-- Field 2: Height -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/heightEditTxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/height_cm"
                    android:paddingRight="4dp"
