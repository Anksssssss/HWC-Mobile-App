<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login_activity.username.UsernameFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="302dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_username"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/til_username_hint_text"
                android:paddingTop="@dimen/padding_normal"
                android:paddingBottom="@dimen/padding_normal"
                tools:layout_editor_absoluteX="16dp">
                <!--        app:endIconTint="@color/primaryColor"-->
                <!--        app:layout_constraintTop_toBottomOf="@id/toggleStates"-->

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_username"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawablePadding="@dimen/padding_normal"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_nxt"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/margin_big"
                android:layout_height="@dimen/btn_height"
                android:text="@string/next"
                android:backgroundTint="@color/purple"
                android:textSize="@dimen/text_big"/>

<!--            <com.google.android.material.button.MaterialButton-->
<!--                android:id="@+id/btn_webview"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_marginTop="@dimen/margin_big"-->
<!--                android:layout_height="@dimen/btn_height"-->
<!--                android:text="Web Page"-->
<!--                android:backgroundTint="@color/primary"-->
<!--                android:textSize="@dimen/text_big"/>-->

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>

