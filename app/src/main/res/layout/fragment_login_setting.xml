        <TextView
            android:id="@+id/dropdown_label_state"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="State"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintTop_toBottomOf="@id/SwasthyaL_withoutcard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <Spinner
            android:id="@+id/dropdown_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:hint="State"
            app:layout_constraintTop_toBottomOf="@id/dropdown_label_state"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <TextView
            android:id="@+id/dropdown_label_district"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="District/Town/City"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintTop_toBottomOf="@id/dropdown_state"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <Spinner
            android:id="@+id/dropdown_district"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:hint="District/Town/City"
            app:layout_constraintTop_toBottomOf="@id/dropdown_label_district"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <TextView
            android:id="@+id/dropdown_label_taluk"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Taluk/Tehsil"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintTop_toBottomOf="@id/dropdown_district"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <Spinner
            android:id="@+id/dropdown_taluk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:hint="Taluk/Tehsil"
            app:layout_constraintTop_toBottomOf="@id/dropdown_label_taluk"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <TextView
            android:id="@+id/dropdown_label_street"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Street/Panchayat/Village"
            android:layout_marginHorizontal="24dp"
            app:layout_constraintTop_toBottomOf="@id/dropdown_taluk"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <Spinner
            android:id="@+id/dropdown_street"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:hint="Street/Panchayat/Village"
            app:layout_constraintTop_toBottomOf="@id/dropdown_label_street"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <Button
            android:id="@+id/continue_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Submit"
            app:layout_constraintTop_toBottomOf="@id/dropdown_street"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
